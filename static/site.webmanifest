        },
        {
            "src": "/static/logo.png",
            "sizes": "384x384",
            "type": "image/png"
        }
    ],
    "shortcuts": [
        {
            "name": "添加交易",
            "short_name": "添加交易",
            "description": "快速添加新的收入或支出记录",
            "url": "/add_transaction",
            "icons": [
                {
                    "src": "/static/logo.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "交易记录",
            "short_name": "交易记录",
            "description": "查看所有交易记录",
            "url": "/transactions",
            "icons": [
                {
                    "src": "/static/logo.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "仪表板",
            "short_name": "仪表板",
            "description": "查看财务概览和统计",
            "url": "/",
            "icons": [
                {
                    "src": "/static/logo.png",
                    "sizes": "96x96"
                }
            ]
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "protocol_handlers": [
        {
            "protocol": "web+moneymind",
            "url": "/?action=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/upload",
            "accept": {
                "text/csv": [".csv"],
                "application/vnd.ms-excel": [".xls"],
                "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
            }
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "permissions": [
        "notifications",
        "storage"
    ],
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "minimal-ui"
    ]
} 